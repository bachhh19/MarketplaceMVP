<div>
  <div>
    <img src="<%= @product.image_url %>" alt="<%= @product.name %>">
  </div>

  <div>
    <h1><%= @product.name %></h1>

    <p class="text-muted">Vendeur: <%= @product.user.lastname %> <%= @product.user.firstname %></p>

    <p><%= @product.description %></p>

    <p><%= number_to_currency(@product.price) %></p>

    <div>
      <% if current_user&.buyer? %>
          <%= button_to "Ajouter au panier", items_path(product_id: @product.id), method: :post, class: "btn" %>
      <% end %>

      <% if current_user&.seller? %>
        <%= link_to "Modifier", edit_product_path(@product) %>
        <%= link_to "Supprimer", product_path(@product), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      <% end %>
    </div>

    <%= link_to "← Retour à la boutique", products_path %>
  </div>
</div>
