<div class="bg-gray-50 min-h-screen px-4 md:px-10 pt-16 pb-10">
  <div class="max-w-4xl mx-auto bg-white shadow-md rounded-lg p-10">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-start">

      <div class="w-full">
        <img src="<%= @product.image_url %>" alt="<%= @product.name %>" class="w-full h-auto rounded-md shadow-sm">
      </div>

      <div class="flex flex-col justify-between space-y-6">
        <h1 class="text-4xl font-bold text-gray-800"><%= @product.name %></h1>

        <p class="text-gray-700 leading-relaxed"><%= @product.description %></p>

        <p class="text-2xl font-semibold text-indigo-600">
          <%= number_to_currency(@product.price) %>
        </p>

        <div class="flex flex-wrap gap-4">
          <% if current_user&.buyer? %>
            <%= button_to "Ajouter au panier", items_path(product_id: @product.id), method: :post, class: "bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-6 rounded" %>
          <% end %>

          <% if current_user&.seller? %>
            <%= link_to "Modifier", edit_product_path(@product), class: "btn btn-secondary" %>
            <%= link_to "Supprimer", product_path(@product), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
          <% end %>
        </div>

        <%= link_to "← Retour à la boutique", products_path, class: "text-indigo-500 hover:text-indigo-700 mt-6 inline-block" %>
      </div>
    </div>
  </div>
</div>
