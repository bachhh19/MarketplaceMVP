<%= form_with model: @product, class: "p-4 border rounded bg-light", local: true do |f| %>
  <div class="form-group mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Nom du produit" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :image_url, class: "form-label" %>
    <%= f.text_field :image_url, class: "form-control", placeholder: "https://..." %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, class: "form-control", rows: 4, placeholder: "DÃ©cris ton produit ici..." %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :price, class: "form-label" %>
    <div class="input-group">
      <span class="input-group-text">CHF</span>
      <%= f.number_field :price, class: "form-control", step: 0.01, placeholder: "0.00" %>
    </div>
  </div>

  <div class="text-end">
    <%= f.submit "Enregistrer", class: "btn btn-primary" %>
  </div>
<% end %>
