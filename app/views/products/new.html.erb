<%= form_with model: @product do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :price %><br>
    <%= f.number_field :price, step: 0.01 %>
  </div>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
