<nav class="navbar">
  <div class="navbar-left">
    <%= link_to "MyShop", root_path, class: "brand" %>

    <% if user_signed_in? && current_user.seller? %>
      <%= link_to "Mes produits", products_path %>
      <%= link_to "Créer un produit", new_product_path %>
    <% elsif user_signed_in? && current_user.buyer? %>
      <%= link_to "Boutique", products_path %>
      <%= link_to "Mon panier", cart_path %>
    <% end %>
  </div>

  <div class="navbar-right">
    <% if user_signed_in? %>
      <span class="text-gray-500">
        Connecté en tant que <strong><%= current_user.role.capitalize %></strong>
      </span>
      <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "logout-link" %>
    <% else %>
      <%= link_to "Connexion", new_user_session_path %>
      <%= link_to "Inscription", new_user_registration_path %>
    <% end %>
  </div>
</nav>
