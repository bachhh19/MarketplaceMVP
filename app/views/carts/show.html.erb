<% valid_items = @cart.items.select { |item| item.quantity.present? && item.quantity > 0 } %>

<h1 class="text-2xl font-bold mb-6 text-center">Mon panier</h1>

<% if valid_items.any? %>
  <div class="products-grid">
    <% valid_items.each do |item| %>
      <div class="product-card">
        <% if item.product.image_url.present? %>
          <%= image_tag item.product.image_url, alt: item.product.name, class: "product-image" %>
        <% end %>

        <div class="product-info">
          <h2 class="text-lg font-semibold text-gray-800"><%= item.product.name %></h2>
          <p class="text-sm text-gray-600">Quantit√© : <%= item.quantity %></p>
          <p class="text-sm text-gray-600">Prix unitaire : <%= number_to_currency(item.product.price) %></p>
        </div>

        <div class="mt-4 flex flex-col items-center gap-2">
          <div class="flex gap-2 items-center">

            <%# Moins %>
            <% if item.quantity > 1 %>
              <%= form_with url: item_path(item), method: :patch, local: true do |form| %>
                <%= form.hidden_field :quantity, value: item.quantity - 1 %>
                <%= form.submit "-", class: "btn btn-secondary" %>
              <% end %>
            <% end %>

            <%# Plus %>
            <%= form_with url: item_path(item), method: :patch, local: true do |form| %>
              <%= form.hidden_field :quantity, value: item.quantity + 1 %>
              <%= form.submit "+", class: "btn btn-secondary" %>
            <% end %>
          </div>

          <%# Supprimer %>
          <%= form_with url: item_path(item), method: :delete, data: { confirm: "Supprimer cet article ?" }, local: true do |form| %>
            <%= form.submit "Supprimer", class: "btn btn-danger" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-8 text-right max-w-5xl mx-auto">
    <p class="text-xl font-semibold">Total : <%= number_to_currency(@cart.total_price) %></p>
    <div class="mt-4 flex justify-end gap-4">
      <%= button_tag "Commander", class: "btn" %>
      <%= button_to "Vider le panier", cart_path, method: :delete, data: { confirm: "Vider le panier ?" }, class: "btn btn-danger" %>
    </div>
  </div>
<% else %>
  <p class="text-gray-600 text-center">Votre panier est vide.</p>
<% end %>
